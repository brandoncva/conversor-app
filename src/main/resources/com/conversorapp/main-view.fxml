<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.conversorapp.controllers.MainController">

    <!-- Campo de entrada -->
    <TextField fx:id="inputField" promptText="Ingrese el valor" />

    <!-- Selectores de unidades -->
    <HBox alignment="CENTER" spacing="10">
        <ComboBox fx:id="unidadOrigen" promptText="Unidad de Origen" />
        <ComboBox fx:id="unidadDestino" promptText="Unidad de Destino" />
    </HBox>

    <!-- Botones -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#convertir" style="-fx-font-weight: bold;" text="Convertir" />
        <Button onAction="#limpiar" style="-fx-base: #ff4444;" text="Limpiar" />
    </HBox>

    <!-- Resultado -->
    <Label fx:id="resultadoLabel" style="-fx-font-size: 14; -fx-text-fill: #0066cc;" />

    <!-- Historial -->
    <Label style="-fx-font-weight: bold;" text="Historial:" />
    <TextArea fx:id="historialArea" editable="false" prefHeight="150" />
</VBox>
